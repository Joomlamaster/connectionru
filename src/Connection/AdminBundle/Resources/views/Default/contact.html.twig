{% extends 'ConnectionAdminBundle::layout.html.twig' %}
{% block content %}
    {% if contacts is defined and contacts is not empty %}
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
            </tr>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.name }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.subject }}</td>
                    <td>{{ contact.message }}</td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}