<html lang="en">
    <head>
        <title>
            {% block title %}
                {{ settings.title|default() }}
            {% endblock %}
        </title>

        <meta charset="UTF-8">
        <meta name="description" content="{{ settings.meta_description|default() }}">
        <meta name="keywords" content="{{ settings.meta_keywords|default() }}">

        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/connectionweb/css/bootstrap.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('bundles/connectionweb/css/bootstrap-theme.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('bundles/connectionadmin/css/dashboard.css') }}" type="text/css" />
        {% endblock %}
    </head>
    <body>
        {% block topNavBar %}
            <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">ConnectionRu</a>
                    </div>#}
                    <ul class="nav navbar-nav pull-right">
                        <li class="dropdown search-item">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span> {{ app.user.username }}
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        {% endblock %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3 col-md-2 sidebar">
                    {% block leftNavBar %}
                        <ul class="nav nav-sidebar">
                            <li><a href="{{ path('admin_settings_background') }}">Background</a></li>
                            <li><a href="{{ path('admin_contact_us') }}">Contact Us</a></li>
                            <li><a href="{{ path('admin_event_index') }}">Events</a></li>
                            <li><a href="{{ path('admin_user_index') }}">Users</a></li>
                        </ul>
                    {% endblock %}
                </div>
                <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                    <h1 class="page-header">{{ headline|default('Dashboard') }}</h1>
                    {% block content %}
                    {% endblock %}
                </div>
            </div>
        </div>

        {% block javascript %}
            <script type="text/javascript" src="{{ asset('bundles/connectionweb/js/jquery-1.11.1.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/connectionweb/js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/connectionweb/js/jquery-ui.min.js') }}"></script>
        {% endblock %}
    </body>
</html>