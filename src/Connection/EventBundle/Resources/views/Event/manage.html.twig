{% extends 'ConnectionWebBundle:Frontend:layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/connectionevent/css/google/map.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block content %}
    <h1>Event edit</h1>
    {{ form_start(form, {'action': path('event_manage', {id: id}), 'attr': {'class': 'fos_user_registration_register master_slave gmap'}}) }}
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.eventDate) }}
        {{ form_row(form.category) }}
        {{ form_row(form.contactName) }}
        {{ form_row(form.email) }}
        {{ form_row(form.phone) }}
        <div id="master_slave">
            <div>
                {{ form_row(form.country) }}
            </div>
            {% if (form.state is defined) %}
                <div id="slave_block">
                    {{ form_row(form.state) }}
                </div>
            {% endif %}
        </div>
        {{ form_row(form.lat) }}
        {{ form_row(form.lng) }}
        {{ form_row(form.save) }}
    {{ form_errors(form) }}
    {{ form_end(form, {'render_rest': false}) }}

    <div id="map_canvas"></div>
{% endblock %}
{% block javascript %}
    {{ parent() }}
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
    <script type="text/javascript" src="{{ asset('bundles/connectionevent/js/google/map.js') }}"></script>
{% endblock %}
