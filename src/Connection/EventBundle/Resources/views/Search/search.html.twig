{% extends 'ConnectionWebBundle:Frontend:layout.html.twig' %}

{% block theme %}search-event{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/connectionevent/css/search.css') }}" type="text/css" />
{% endblock %}

{% block breadcrumbs %}
    <div class="container breadcrumbs">
        <ul>
            <li><a href="{{ path('connection_homepage') }}">Main page</a></li>
            <li>Search Event</li>
        </ul>
    </div>
{% endblock breadcrumbs %}
{% block content %}
    <h4>Search</h4>
    <div class="row">
        <div class="search-form">
            <form action="">
                <div class="form-inline">
                    <input type="text" placeholder="Search"/>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Today
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Tommorow
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> All date
                    </label>
                    <span class="or">or</span>
                    <label class="checkbox-inline">
                        Select date <input type="date"/>
                    </label>
                </div>
                <div class="form-inline">
                    <select class="form-control" name="">
                        <option value="">Select city</option>
                    </select>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Brooklyn, NY
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Albany
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Hinghamton
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Buffalo
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Manhetten
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Long island
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> New york city
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Rrochester
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Others
                    </label>
                </div>
                <div class="form-inline">
                    <select class="form-control" name="">
                        <option value="">Select direction</option>
                    </select>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Music
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Primary party
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Concert
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Competition
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Exhibitions
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Movie
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Activity rest
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Photo
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Sport
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Others
                    </label>
                </div>
                <div class="form-inline text-center">
                    <button type="submit"><span class="glyphicon glyphicon-search"></span> Search</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row filters">
        <div class="title">You select filter:</div>
        <div class="filter">New York</div>
        <div class="filter">Buffalo</div>
        <div class="filter">Long Island</div>
        <div class="filter">Concert</div>
        <div class="filter">Competition</div>
        <div class="clear-filter filter">Clear all filters</div>
    </div>
    <div class="row results-line"><span>results found</span></div>
    {% if topEvents is defined and topEvents is not empty %}
    <div class="row found-1">
        {% for event in topEvents %}
            <div class="col-xs-2">
                <div class="event-small">
                    <div class="row">
                        <div class="col-xs-12"><img src="{{ event.image.path }}" alt=""/></div>
                    </div>
                    <div class="row">
                        <time>{{ event.eventDate|date }}</time>
                        <a class="title" href="#">OFFICE & Residential</a>
                        <em>(NYC) pic map</em><br/>
                        <a href="#" class="btn-gradient">View</a>
                        <br/>
                        <em>Posted:</em>
                        <a href="#" class="name">Joshua Bell</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% endif %}
    <div class="found-2">
        <div class="row">
            {% for event in events %}
                <div class="col-xs-4 event-small">
                    <div class="event-small">
                        <div class="col-xs-4">
                            <img src="{{ event.image.path }}" alt=""/>
                        </div>
                        <div class="col-xs-8">
                            <time>{{ event.eventDate|date }}</time>
                            <a class="title" href="#">OFFICE & Residential</a>
                            <em>(NYC) pic map</em><br/>
                            <a href="#" class="btn-gradient">View</a>
                            <br/>
                            <em>Posted:</em>
                            <a href="#" class="name">Joshua Bell</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
     </div>
    {% if (pages is defined and pages > 1) and currentPage is defined %}
        <div class="row">
            <div class="paginator">
                {% for page in 1..pages %}
                    <a href="{{ path('event_search', {'page': page}) }}" {{ page == currentPage ? "class='page current'" : "" }} >{{ page }}</a>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}