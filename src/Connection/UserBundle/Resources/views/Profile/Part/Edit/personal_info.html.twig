{% if form is defined %}
    {{ form_start(form, {'action': path('edit_user_profile'), 'method': 'POST', 'attr': {'class': 'master_slave'}}) }}
    {#<div class="row">#}
        {#<div class="col-xs-6">#}
            {#{{ form_row(form.firstName) }}#}
        {#</div>#}
        {#<div class="col-xs-6">#}
            {#{{ form_row(form.lastName) }}#}
        {#</div>#}
    {#</div>#}
    <div class="row">
        <div class="col-xs-6">
            {{ form_row(form.profile.aboutMe) }}
        </div>
        <div class="col-xs-6">
            {{ form_row(form.profile.interestsAndHobbies) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4">
            {{ form_row(form.profile.gender) }}
        </div>
        <div class="col-xs-4">
            {{ form_row(form.profile.seek) }}
        </div>
        <div class="col-xs-4 birthdate">
            {{ form_row(form.profile.birthdate, { 'atrr': { 'class': 'select-inline'} } ) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4">
            <div id="master_slave">
                <div>
                    {{ form_row(form.profile.country) }}
                </div>
                {% if (form.profile.state is defined) %}
                    <div id="slave_block">
                        {{ form_row(form.profile.state) }}
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="col-xs-4">
            <div>
                {{ form_row(form.profile.originallyFrom) }}
            </div>
        </div>
        <div class="col-xs-4">
            <div>
                {{ form_row(form.profile.originallyFromCity) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4">
            {{ form_row(form.profile.lookingFor) }}
        </div>
        <div class="col-xs-4">
            {{ form_row(form.profile.maritalStatus) }}
        </div>
        <div class="col-xs-4">
            {{ form_row(form.profile.languages) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            {{ form_row(form.profile.height) }}
        </div>
        <div class="col-xs-3">
            {{ form_row(form.profile.bodyType) }}
        </div>
        <div class="col-xs-3">
            {{ form_row(form.profile.eyeColor) }}
        </div>
        <div class="col-xs-3">
            {{ form_row(form.profile.hairColor) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            {{ form_row(form.profile.smoking) }}
        </div>
        <div class="col-xs-3">
            {{ form_row(form.profile.drinking) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            {{ form_row(form.profile.education) }}
        </div>
        <div class="col-xs-3">
            {{ form_row(form.profile.educationIvyLeague) }}
        </div>
        <div class="col-xs-3">
            {{ form_row(form.profile.ivyLeagueUniversity) }}
        </div>
        <div class="col-xs-3">
            {{ form_row(form.profile.profession) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            {{ form_row(form.profile.haveChildren) }}
        </div>
        <div class="col-xs-6">
            {{ form_row(form.profile.wantChildren) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            {{ form_row(form.profile.livesWithChildren) }}
        </div>
        <div class="col-xs-6">
            {{ form_row(form.profile.openToPersonWithKids) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            {{ form_row(form.profile.religion) }}
        </div>
        <div class="col-xs-3">
            {{ form_row(form.profile.ethnicity) }}
        </div>
        <div class="col-xs-3">
            {{ form_row(form.profile.zodiac) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
        </div>
        <div class="col-xs-9">
            {{ form_row(form.submit, { attr: { class: 'btn-gradient' }}) }}
        </div>
    </div>
    <div class="col-xs-5"></div>
    {{ form_end(form, {'render_rest': false}) }}
{% endif %}
<script type="text/javascript">
    window.onload = function(){
       handleIvyLeague('#{{form.profile.educationIvyLeague.vars.id}}', '#{{form.profile.ivyLeagueUniversity.vars.id}}', '1');
       handleOriginallyFrom('#{{form.profile.originallyFrom.vars.id}}', '#{{form.profile.originallyFromCity.vars.id}}');
    }
</script>