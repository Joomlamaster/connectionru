{% if userPhotos is defined and userPhotos is not empty %}
    {% for gallery in userPhotos %}
        {% for galleryName, images in gallery %}
            <div class="row profile-gallery">
                <p class="lead">Gallery: {{ galleryName }}</p>
                {% for image in images %}
                    <div class="profile-image-box">
                        <img src="{{ image.path }}">
                        <a href="{{ path('remove_profile_image', {id: image.id}) }}" class="btn btn-danger profile-image-remove">Remove</a>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}