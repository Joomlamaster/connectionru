{% extends 'ConnectionWebBundle:Frontend:layout.html.twig' %}
{% block theme %}create-profile{% endblock %}

{% block breadcrumbs %}
    <div class="container breadcrumbs">
        <ul>
            <li><a href="{{ path('connection_homepage') }}">Main page</a></li>
            <li>Profile</li>
        </ul>
    </div>
{% endblock breadcrumbs %}

{% block content %}
    <h4>We found an account with same Email Address, is it you ?:</h4>
    <div class="row">
        <div class="col-xs-2">
            <div id="add-photo">
                <div class="msg">
                    <div class="sprite sprite-add-photo"></div>
                </div>
            </div>
        </div>
        <div class="col-xs-5">
            <div class="row">
                <div class="col-xs-12">
                    <h5>{{ user.firstName }} {{ user.lastName }}</h5>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    {{ user.email }}
                </div>
            </div>
        </div>
        <div class="col-xs-5">
            <div class="row">
                <div class="col-xs-12">
                    {{ form_start(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-xs-5"></div>
    </div>
{% endblock %}