{% extends 'ConnectionUserBundle::registration_layout.html.twig' %}
{% block theme %}create-profile{% endblock %}

{% block fos_user_content %}
    {% if form is defined %}
    {% form_theme form 'ConnectionUserBundle:Registration:fields.html.twig' %}
    {{ form_start(form, {'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register master_slave form-horizontal'}}) }}
        <div class="col-xs-9">
            <div class="row">
                <div class="col-xs-6">
                    {{ form_row(form.username) }}
                </div>
                <div class="col-xs-6">
                    {{ form_row(form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    {{ form_row(form.plainPassword.first) }}
                </div>
                <div class="col-xs-6">
                    {{ form_row(form.plainPassword.second) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    {{ form_row(form.profile.aboutMe) }}
                </div>
                <div class="col-xs-6">
                    {{ form_row(form.profile.interestsAndHobbies) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    {{ form_row(form.profile.gender) }}
                </div>
                <div class="col-xs-4">
                    {{ form_row(form.profile.seek) }}
                </div>
                <div class="col-xs-4">
                    {{ form_row(form.profile.birthdate, { 'attr': { 'class': 'select-inline'} } ) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="master_slave">
                        <div>
                            {{ form_row(form.profile.country, { 'attr': { 'class': 'selectpicker master'} }) }}
                        </div>
                        {% if (form.profile.state is defined) %}
                            <div class="slave_block">
                                {{ form_row(form.profile.state, { 'attr': { 'class': 'selectpicker slave'} }) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="col-xs-4">
                    <div>
                        {{ form_row(form.profile.city) }}
                    </div>
                </div>
                <div class="col-xs-4">
                    <div>
                        {{ form_row(form.profile.zip) }}
                    </div>
                </div>
                <div class="col-xs-4" style="margin-top:7px;">
                        <div>
                            {{ form_row(form.profile.originallyFrom, { 'attr': { 'class': 'selectpicker'}} ) }}
                        </div>
                </div>
                <div class="col-xs-4" style="margin-top:7px;">
                        <div>
                            {{ form_row(form.profile.originallyFromCity) }}
                        </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    {{ form_row(form.profile.seek) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    {{ form_row(form.profile.lookingFor) }}
                </div>
                <div class="col-xs-4">
                    {{ form_row(form.profile.maritalStatus) }}
                </div>
                <div class="col-xs-4">
                    {{ form_row(form.profile.languages, { 'attr': { 'class': 'two-columns'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    {{ form_row(form.profile.height, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
                <div class="col-xs-3">
                    {{ form_row(form.profile.bodyType, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
                <div class="col-xs-3">
                    {{ form_row(form.profile.eyeColor, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
                <div class="col-xs-3">
                    {{ form_row(form.profile.hairColor, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    {{ form_row(form.profile.smoking, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
                <div class="col-xs-3">
                    {{ form_row(form.profile.drinking, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
				<div class="col-xs-3">
					{{ form_row(form.profile.income, { 'attr': { 'class': 'selectpicker'}}) }}
				</div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    {{ form_row(form.profile.education, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
                <div class="col-xs-4">
                    {{ form_row(form.profile.educationIvyLeague) }}
                </div>
                <div class="col-xs-3 ivy-league-text hidden">
                    {{ form_row(form.profile.ivyLeagueUniversity) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    {{ form_row(form.profile.profession, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
                <div class="col-xs-4">
                    {{ form_row(form.profile.haveChildren, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
                <div class="col-xs-4">
                    {{ form_row(form.profile.wantChildren, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    {{ form_row(form.profile.livesWithChildren, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
                <div class="col-xs-6">
                    {{ form_row(form.profile.openToPersonWithKids, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    {{ form_row(form.profile.religion, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
                <div class="col-xs-3">
                    {{ form_row(form.profile.ethnicity, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
                <div class="col-xs-3">
                    {{ form_row(form.profile.zodiac, { 'attr': { 'class': 'selectpicker'}}) }}
                </div>
            </div>
            {#<div class="row">
                <div class="col-xs-12">
                    {{ form_row(form.captcha) }}
                </div>
            </div>#}
            <div class="row">
                <div class="col-xs-1">
                    <div class="row">
                        {{ form_row(form.agree) }}
                    </div>
                </div>
            </div><br/><br/>
            <div class="row">
                <div class="col-xs-3">
                </div>
                <div class="col-xs-9">
                    {{ form_row(form.submit, { attr: { class: 'btn-gradient' }, label: 'register'}) }}
                </div>
            </div>
            <div class="col-xs-5"></div>
            {{ form_row(form.registrationType, {'value':'extended'}) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    {% endif %}

    <script type="text/javascript">
        window.onload = function(){
           handleIvyLeague();
           handleOriginallyFrom('#{{form.profile.originallyFrom.vars.id}}', '#{{form.profile.originallyFromCity.vars.id}}');
        }

        preLoadSlaveFeedback = function(slaveBlock){
            if(slaveBlock.length){
                $(slaveBlock).html('');
            }
        }

        loadSlaveFeedback = function(){
            $('#fos_user_registration_form_profile_state').selectpicker();
        }
    </script>

{% endblock %}

