{% extends 'form_div_layout.html.twig' %}

{% block form_row %}
    <div class="clearfix {% if errors|length > 0 %}error {% endif %}form-inline">
        {{ form_label(form, label) }}
        {% set class = '' %}
        {% if errors|length > 0 %}
            {% set class = 'error' %}
        {% endif %}
        {{ form_widget(form, { 'attr': { 'class': class ~ ' form-control' } }) }}
        {{ form_errors(form) }}
    </div>
{% endblock form_row %}