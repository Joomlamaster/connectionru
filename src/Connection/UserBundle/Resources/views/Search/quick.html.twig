{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'ConnectionUserBundle:Registration:fields.html.twig' %}

{{ form_start(form, {'action': path('user_search_quick_form'), 'attr': {'class': 'fos_user_registration_register master_slave form-horizontal'}}) }}
    {{ form_errors(form) }}
    {{ form_row(form.gender) }}
    {{ form_row(form.seek) }}

    <div class="clearfix form-inline">
        <label for="search_age" class="required">Age</label>
        {{ form_widget(form.ageFrom, { 'attr': {'class': 'form-control'} }) }} - {{ form_widget(form.ageTo, { 'attr': {'class': 'form-control'} }) }}
    </div>

    {{ form_row(form.lookingFor) }}
    <div class="master_slave">
        <div>
            {{ form_row(form.country) }}
        </div>
        {% if (form.state is defined) %}
            <div class="slave_block">
                {{ form_row(form.state) }}
            </div>
        {% endif %}
    </div>
{{ form_end(form, {'render_rest': false}) }}