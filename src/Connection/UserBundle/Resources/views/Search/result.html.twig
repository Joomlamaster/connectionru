{% extends 'ConnectionWebBundle:Frontend:layout.html.twig' %}

{% block theme %}search-event{% endblock %}

{% block breadcrumbs %}
    <div class="container breadcrumbs">
        <ul>
            <li><a href="{{ path('connection_homepage') }}">Main page</a></li>
            <li>Search</li>
        </ul>
    </div>
{% endblock breadcrumbs %}
{% block content %}
    <h4>Search</h4>
    <div class="row">
        <div class="search-form">
            <form action="">
                <div class="form-inline">
                    <input type="text" placeholder="Search"/>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Today
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Tommorow
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> All date
                    </label>
                    <span class="or">or</span>
                    <label class="checkbox-inline">
                        Select date <input type="date"/>
                    </label>
                </div>
                <div class="form-inline">
                    <select class="form-control" name="">
                        <option value="">Select city</option>
                    </select>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Brooklyn, NY
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Albany
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Hinghamton
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Buffalo
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Manhetten
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Long island
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> New york city
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Rrochester
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Others
                    </label>
                </div>
                <div class="form-inline">
                    <select class="form-control" name="">
                        <option value="">Select direction</option>
                    </select>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Music
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Primary party
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Concert
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Competition
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Exhibitions
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Movie
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Activity rest
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Photo
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Sport
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox"/> Others
                    </label>
                </div>
                <div class="form-inline text-center">
                    <button type="submit"><span class="glyphicon glyphicon-search"></span> Search</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row results-line"><span>results found</span></div>
    <div class="row found-1">
        {% if users is defined and users is not empty %}
            {% for user in users %}
                <div class="col-xs-2">
                    <div class="event-small">
                        <div class="row">
                            <div class="col-xs-12">
                                <a class="title" href="{{ path('view_profile', {'id': user.profile.id}) }}">
                                    <img src="{{ user.profile.avatar is defined ? user.profile.avatar : ""  }}" alt=""/>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <time>{{ user.profile.birthdate|userAge }} {{ user.profile.state.name is defined ? "," ~ user.profile.state.name : ""}}</time>
                            <a class="title" href="{{ path('view_profile', {'id': user.profile.id}) }}">{{ user.userName }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
    <div class="row">
        <div class="paginator">
            <a href="#" class="page current">1</a>
            <a href="#" class="page">2</a>
            <a href="#" class="page">3</a>
            <a href="#" class="page">4</a>
            <a href="#" class="page">5</a>
            <a href="#" class="page">6</a>
            <a href="#" class="page">7</a>
            <a href="#" class="page">8</a>
            <div class="page">...</div>
            <a href="#" class="page">987</a>

        </div>
    </div>
{% endblock %}