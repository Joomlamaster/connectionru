{% if users is not empty %}
    <div class="people">
        {% for user in users %}
            <div class="face">
                {% if user.profile.avatar is defined and user.profile.avatar is not empty %}
                    <img style="position: absolute;" width="83px" height="112" src="{{ user.profile.avatar }}">
                {% endif %}
                <div class="info">
                    <p class="name">{{ user.userName }}</p>
                    <p>{{ user.profile.birthdate|userAge}} {{ user.profile.state.name is defined ? "," ~ user.profile.state.name : ""}}</p>

                    {% if user.profile.lookingFor.name is defined %}
                        <p>Looking for:</p>
                        <p class="blue">{{ user.profile.lookingFor.name }}</p>
                    {% endif %}
                    <a href="{{ path('view_profile', {id: user.profile.id}) }}">see this user</a>
                </div>
            </div>
        {% endfor %}
        <a class="more pull-right" href="{{ path('search_user_result') }}">More profile ></a>
    </div>
{% endif %}