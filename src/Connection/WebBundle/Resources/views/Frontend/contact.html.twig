{% extends 'ConnectionWebBundle:Frontend:layout.html.twig' %}
{% form_theme form '@ConnectionUser/Search/fields.html.twig' %}

{% block theme %}contact-us{% endblock %}

{% block breadcrumbs %}
    <div class="container breadcrumbs">
        <ul>
            <li><a href="{{ path('connection_homepage') }}">Main page</a></li>
            <li>Contact Us</li>
        </ul>
    </div>
{% endblock breadcrumbs %}
{% block content %}
    <div class="row">
        <div class="col-xs-5">
            <h4>Contact us</h4>
            {% if saved is defined and saved %}
                <h5>ConnectionRu.com - <span class="blue">Thank you for contacting us, your request will be processed sup.</span></h5>
            {% else %}
                {{ form_start(form) }}
                {{ form_end(form) }}
            {% endif %}
        </div>
        <div class="col-xs-3">
        </div>
        <div class="col-xs-4">
            <img src="/bundles/connectionweb/img/about-us.png" alt="About us"/>
        </div>
    </div>
{% endblock %}